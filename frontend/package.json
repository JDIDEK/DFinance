{
  "name": "dfinance-frontend",
  "version": "2.0.0",
  "description": "DFinance - Advanced Personal Finance Tracker Frontend",
  "scripts": {
    "start": "npx http-server . -p 3000 -c-1",
    "dev": "concurrently \"npm run watch:css\" \"npm run livereload\" \"npx http-server . -p 3000 -c-1\"",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./src/tailwind.css --watch",
    "livereload": "npx livereload public src --wait 200 --extraExts css,html,js",
    "build-css": "npx tailwindcss -i ./src/input.css -o ./src/tailwind.css --minify"
  },
  "keywords": ["finance", "tracker", "frontend", "dashboard"],
  "author": "DFinance Team",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "livereload": "^0.9.3",
    "concurrently": "^8.2.2"
  }
}
